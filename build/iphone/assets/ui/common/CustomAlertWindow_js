function CreateIndicatorWindow(e){function o(){return style=Ti.UI.iPhone.ActivityIndicatorStyle.PLAIN,"iPhone OS"!==Ti.Platform.name&&(style=Ti.UI.ActivityIndicatorStyle.DARK),style}function t(){s.open(),l.show()}function i(){l.hide(),s.close()}var n="50%",r="60%",e=e||{},a=e.top||10,c=e.text||L("loading"),s=Ti.UI.createWindow({height:r,width:n,top:a,borderRadius:10,touchEnabled:!1,backgroundColor:"#000",opacity:.6}),d=Ti.UI.createView({width:"95%",height:"95%",layout:"horizontal"}),l=Ti.UI.createActivityIndicator({style:o(),left:"10%",height:Ti.UI.FILL,width:"20%"}),p=Ti.UI.createLabel({left:10,width:"auto",height:"auto",text:c,color:"#ffffff",font:{fontSize:"20dp"}});return d.add(l),d.add(p),s.add(d),s.openIndicator=t,s.closeIndicator=i,s}exports.CreateIndicatorWindow=CreateIndicatorWindow;