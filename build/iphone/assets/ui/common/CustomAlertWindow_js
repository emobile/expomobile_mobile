function CreateIndicatorWindow(e){function t(){return style=Ti.UI.iPhone.ActivityIndicatorStyle.PLAIN,"iPhone OS"!==Ti.Platform.name&&(style=Ti.UI.ActivityIndicatorStyle.DARK),style}function o(){l.open(),h.show()}function i(){h.hide(),l.close()}var n="50%",r="60%",e=e||{},a=e.top||10,s=e.text||L("loading"),c=require("tools"),d=c.isiOS7Plus(),l=Ti.UI.createWindow({height:r,width:n,top:a,borderRadius:10,touchEnabled:!1,backgroundColor:"#000",opacity:.6,fullscreen:d}),p=Ti.UI.createView({width:"95%",height:"95%",layout:"horizontal"}),h=Ti.UI.createActivityIndicator({style:t(),left:"10%",height:Ti.UI.FILL,width:"20%"}),T=Ti.UI.createLabel({left:10,width:"auto",height:"auto",text:s,color:"#ffffff",font:{fontSize:"20dp"}});return p.add(h),p.add(T),l.add(p),l.openIndicator=o,l.closeIndicator=i,l}exports.CreateIndicatorWindow=CreateIndicatorWindow;