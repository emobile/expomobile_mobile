var ANActivityIndicator=function(e){var o,t=e||"Loading...",n="android"===Ti.Platform.osname,i="25dp",r=t.length>13?"260dp":Ti.UI.SIZE;this.infoWindow=Ti.UI.createWindow({touchEnabled:!0});var s=Ti.UI.createView({height:Ti.UI.SIZE,width:Ti.UI.SIZE,backgroundColor:"#000",borderRadius:10,opacity:.8,touchEnabled:!1,layout:"vertical"});o=n?Ti.UI.ActivityIndicatorStyle.BIG:Ti.UI.iPhone.ActivityIndicatorStyle.BIG,this.activityIndicator=Ti.UI.createActivityIndicator({style:o,top:"15dp",height:Ti.UI.SIZE,width:Ti.UI.SIZE}),s.add(this.activityIndicator),this.message=Ti.UI.createLabel({text:t,top:"10dp",left:i,right:i,color:"#fff",textAlign:"center",font:{fontFamily:n?"Droid Sans":"Helvetica Neue",fontSize:"18dp",fontWeight:"bold"},wordwrap:!1,height:"44dp",width:r}),s.add(this.message),this.infoWindow.add(s)};ANActivityIndicator.prototype.show=function(){this.infoWindow.open(),this.activityIndicator.show()},ANActivityIndicator.prototype.hide=function(){this.activityIndicator.hide(),this.infoWindow.close()},module.exports=ANActivityIndicator;