function CreateIndicatorWindow(e){function o(){return style=Ti.UI.iPhone.ActivityIndicatorStyle.BIG,"iPhone OS"!==Ti.Platform.name&&(style=Ti.UI.ActivityIndicatorStyle.BIG_DARK),style}function t(){a.open(),c.show()}function i(){a.close()}var n="60%",r="25%",e=e||{};e.top||8,e.text||L("loading");var a=Ti.UI.createWindow({height:"100%",width:"100%",backgroundColor:"#000",opacity:0,fullscreen:!1,navBarHidden:!0}),s=Ti.UI.createView({height:r,width:n,borderRadius:10,touchEnabled:!1,backgroundColor:"#000",opacity:.6,center:{y:"50%",x:"50%"},layout:"horizontal"}),c=Ti.UI.createActivityIndicator({style:o(),left:"10%",height:Ti.UI.FILL,width:"20%"}),d=Ti.UI.createLabel({width:"auto",height:"auto",text:L("loading"),color:"#ffffff",font:{fontSize:"18dp"},left:"20"});return s.add(c),s.add(d),a.add(s),a.addEventListener("blur",function(){i()}),a.openIndicator=t,a.closeIndicator=i,a}exports.CreateIndicatorWindow=CreateIndicatorWindow;