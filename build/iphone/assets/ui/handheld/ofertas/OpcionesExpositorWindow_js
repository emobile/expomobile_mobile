function OpcionesExpositorWindow(){function e(){for(var e=[],i=Ti.Database.open("anadicDB"),t=i.execute("SELECT * FROM exhibitors");t.isValidRow();){var o,a="http://"+Ti.App.Properties.getString("hostname")+t.fieldByName("mobile_logo_url"),n=/missing.jpg/g,r=n.test(a);o=r?"/images/unavailable_small.jpg":"http://"+Ti.App.Properties.getString("hostname")+t.fieldByName("mobile_logo_url"),e.push({id:t.fieldByName("id"),title:t.fieldByName("name"),leftImage:o,font:{fontSize:"22dp"},color:"black"}),table.setData(e),t.next()}t.close(),i.close()}return windowOpc=Ti.UI.createWindow({tabBarHidden:!0,backgroundColor:"white",width:"100%",height:"100%",layout:"vertical",fullscreen:!1,navBarHidden:!0}),table=Ti.UI.createTableView({width:"90%",height:"100%"}),scrollView_1=Ti.UI.createView({id:"scrollView_1",backgroundImage:"/images/background.png",height:"100%",width:"100%",layout:"vertical"}),scrollView_1.add(table),imageViewBar=Ti.UI.createView({id:"imageViewBar",backgroundColor:Ti.App.Properties.getString("viewcolor"),height:80,left:0,top:0,width:"100%",layout:"horizontal"}),imageView=Ti.UI.createImageView({id:"imageView",image:"/images/iconofertas.png",width:60,height:60,top:7,right:3}),imageViewBar.add(imageView),labelTitulo=Ti.UI.createLabel({id:"labelTitulo",height:"auto",width:"70%",text:L("offers"),font:{fontSize:"22dp"},color:"white",textAlign:Ti.UI.TEXT_ALIGNMENT_CENTER}),imageViewBar.add(labelTitulo),buttonClose=Ti.UI.createImageView({id:"buttonClose",image:"/images/close.png",width:30,height:30,top:25}),imageViewBar.add(buttonClose),windowOpc.add(imageViewBar),windowOpc.add(scrollView_1),e(),table.addEventListener("click",function(e){var i,t=e.rowData.id,o=e.rowData.title,a=e.rowData.leftImage,n=require("ui/handheld/ofertas/ExpositoresWindow");new n(i,t,o,a).open()}),windowOpc.addEventListener("android:back",function(){Ti.Media.vibrate(),windowOpc.close()}),buttonClose.addEventListener("click",function(){Ti.Media.vibrate(),windowOpc.close()}),windowOpc}module.exports=OpcionesExpositorWindow;