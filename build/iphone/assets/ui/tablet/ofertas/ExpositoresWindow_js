l({id:"labelPrecio",height:"auto",width:"auto",font:{fontWeight:"bold",fontSize:"24dp"},color:"#686868",right:10,top:w+20}),labelUbicacionTitulo=Ti.UI.createLabel({id:"labelUbicacionTitulo",height:"auto",width:"auto",text:L("location"),font:{fontWeight:"bold",fontSize:"20dp"},color:"black",right:10,top:w+95}),labelUbicacion=Ti.UI.createLabel({id:"labelUbicacion",height:"auto",width:"auto",font:{fontSize:"18dp"},color:"#686868",right:10,top:w+115}),labelFechaInicioTitulo=Ti.UI.createLabel({id:"labelFechaInicioTitulo",height:"auto",width:"auto",text:L("start_time"),font:{fontWeight:"bold",fontSize:"20dp"},color:"black",left:"10",top:w+180}),labelFechaInicio=Ti.UI.createLabel({id:"labelFechaInicio",height:"auto",width:"auto",font:{fontSize:"18dp"},color:"#686868",left:"20",top:w+200}),labelFechaTerminoTitulo=Ti.UI.createLabel({id:"labelFechaTerminoTitulo",height:"auto",width:"auto",text:L("end_time"),font:{fontWeight:"bold",fontSize:"20dp"},color:"black",top:w+180,right:"10"}),labelFechaTermino=Ti.UI.createLabel({id:"labelFechaTermino",height:"auto",width:"auto",font:{fontSize:"18dp"},color:"#686868",right:"10",top:w+200});var b=require("templates"),T=b.getTopBar(L("offers"),"/images/iconofertas.png",o);return viewExpositor.add(imageViewExpositor),viewExpositor.add(labelExpositor),viewExpositor.add(labelCuentaOfertas),viewExpositor.add(labelExpositorTitulo),g.add(line),g.add(labelDescripcionTitulo),g.add(labelDescripcion),g.add(labelPrecioTitulo),g.add(labelPrecio),g.add(labelUbicacionTitulo),g.add(labelUbicacion),g.add(labelFechaInicioTitulo),g.add(labelFechaInicio),g.add(labelFechaTerminoTitulo),g.add(labelFechaTermino),bottomBar.add(buttonFirst),bottomBar.add(buttonPrev),bottomBar.add(buttonNext),bottomBar.add(buttonLast),winExpW.add(T),winExpW.add(viewExpositor),winExpW.add(g),winExpW.add(bottomBar),buttonFirst.addEventListener("click",function(){r(0)}),buttonLast.addEventListener("click",function(){r(h-1)}),buttonPrev.addEventListener("click",function(){p>0?r(p-1):Ti.Media.vibrate()}),buttonNext.addEventListener("click",function(){h-1>p?r(p+1):Ti.Media.vibrate()}),winExpW.addEventListener("android:back",function(){Ti.Media.vibrate(),winExpW.close()}),winExpW}module.exports=ExpositoresWindow;